---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { langFromParams, t } from "../../lib/i18n";

export function getStaticPaths() {
  return ["nl", "en", "it"].map((lang) => ({ params: { lang } }));
}
const lang = langFromParams(Astro.params);
const c = t(lang);
const metaTitle = `${c.faq.title} â€” IDEX Supply`;
const metaDesc =
  lang === "nl"
    ? "Antwoorden over voorraadbeheer verbeteren, inkoop organiseren en supply chain optimaliseren met KPI dashboards en uitzonderingen."
    : c.meta.desc;
---
<BaseLayout title={metaTitle} description={metaDesc} lang={lang}>
  <section class="section">
    <div class="container">
      <div class="card">
        <h1 style="margin-top:10px;">{c.faq.title}</h1>
        <p style="margin-top:12px;">{c.faq.intro}</p>

        <div class="grid" style="margin-top:14px;">
          {c.faq.items.map((it) => (
            <details class="accordion faq-accordion">
              <summary>{it.q}</summary>
              <p>{it.a}</p>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
