---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { langFromParams, t } from "../../lib/i18n";

export function getStaticPaths() {
  return ["nl", "en", "it"].map((lang) => ({ params: { lang } }));
}
const lang = langFromParams(Astro.params);
const c = t(lang);
---
<BaseLayout title={`${c.faq.title} â€” IDEX Supply`} description={c.meta.desc} lang={lang}>
  <section class="section">
    <div class="container">
      <div class="card">
        <div class="kicker">{c.faq.kicker}</div>
        <h1 style="margin-top:10px;">{c.faq.title}</h1>
        <p style="margin-top:12px;">{c.faq.intro}</p>

        <div class="grid" style="margin-top:14px;">
          {c.faq.items.map((it) => (
            <details class="accordion">
              <summary>{it.q}</summary>
              <p>{it.a}</p>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
