---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { SUPPORTED, t } from "../lib/i18n";

const { title, description, lang } = Astro.props;
const metaTitle = title ?? "IDEX Supply";
const metaDesc = description ?? "IDEX Supply";
const currentLang = lang ?? "en";
const c = t(currentLang);
const gaId = import.meta.env.PUBLIC_GA_ID;
const site = Astro.site;
const path = Astro.url.pathname;
const parts = path.split("/").filter(Boolean);
const slugParts = parts[0] && SUPPORTED.includes(parts[0]) ? parts.slice(1) : parts;
const slug = slugParts.join("/");
const pathForLang = (target) => {
  const base = `/${target}/${slug}`.replace(/\/$/, "");
  return `${base}/`;
};
const canonicalUrl = site ? new URL(path, site).toString() : undefined;
const [streetAddress, postalLine, countryName] = c.contact?.address ?? [];
const postalMatch = postalLine ? postalLine.match(/^([0-9]{4}\s?[A-Z]{2})\s+(.*)$/) : null;
const address = streetAddress
  ? {
      "@type": "PostalAddress",
      streetAddress,
      postalCode: postalMatch ? postalMatch[1] : undefined,
      addressLocality: postalMatch ? postalMatch[2] : postalLine,
      addressCountry: countryName,
    }
  : undefined;
const orgSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: c.contact?.company ?? c.common?.brandName,
  url: site ? site.toString() : undefined,
  telephone: c.contact?.phoneTel,
  email: c.contact?.email,
  address,
};
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: metaTitle,
  description: metaDesc,
  provider: { "@type": "Organization", name: c.contact?.company ?? c.common?.brandName },
  areaServed: "NL",
};
const breadcrumbItems = site
  ? (() => {
      const items = [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: new URL(`/${currentLang}/`, site).toString(),
        },
      ];
      const segs = path.split("/").filter(Boolean);
      if (segs[0] && SUPPORTED.includes(segs[0])) segs.shift();
      let acc = `/${currentLang}/`;
      segs.forEach((seg, index) => {
        acc += `${seg}/`;
        items.push({
          "@type": "ListItem",
          position: index + 2,
          name: seg.replace(/-/g, " "),
          item: new URL(acc, site).toString(),
        });
      });
      return items;
    })()
  : null;
const breadcrumbSchema = breadcrumbItems
  ? {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: breadcrumbItems,
    }
  : null;
const schemaJson = JSON.stringify(
  [orgSchema, serviceSchema, breadcrumbSchema].filter(Boolean),
);
---
<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={metaDesc} />
    <meta name="theme-color" content="#0b1220" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <title>{metaTitle}</title>
    {schemaJson && <script type="application/ld+json">{schemaJson}</script>}
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    {site &&
      SUPPORTED.map((code) => (
        <link rel="alternate" hreflang={code} href={new URL(pathForLang(code), site).toString()} />
      ))}
    {site && <link rel="alternate" hreflang="x-default" href={new URL(pathForLang("nl"), site).toString()} />}
    {gaId && <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>}
    {gaId && (
      <script is:inline>{`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${gaId}',{anonymize_ip:true});`}</script>
    )}

    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDesc} />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <Nav lang={currentLang} />
    <main>
      <slot />
    </main>
    <Footer lang={currentLang} />
  </body>
</html>
